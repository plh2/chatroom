{
  "name": "chatroom",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": "https://github.com/pengliheng/chatroom.git",
  "author": "plh2 <pengliheng111@gmail.com>",
  "license": "MIT",
  "scripts": {
    "db:up": "docker compose -f ./mongodb/docker-compose.yml up -d",
    "db:down": "docker compose -f ./mongodb/docker-compose.yml down",
    "bootstrap": "lerna bootstrap",
    "dev": "yarn db:up && lerna run dev",
    "lint:eslint": "lerna run lint:eslint",
    "commit": "cz",
    "lint:prettier": "lerna run lint:prettier",
    "test": "lerna run test",
    "build": "lerna run build",
    "deploy": "docker compose up -d",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "commitizen": "^4.2.6",
    "husky": "^8.0.3",
    "lerna": "^6.0.3"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
