{
  "name": "chatroom",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": "https://github.com/pengliheng/chatroom.git",
  "author": "plh2 <pengliheng111@gmail.com>",
  "license": "MIT",
  "scripts": {
    "db:up": "docker compose -f ./mongodb/docker-compose.yml up -d",
    "db:down": "docker compose -f ./mongodb/docker-compose.yml down",
    "bootstrap": "lerna bootstrap",
    "dev": "yarn db:up && lerna run dev --parallel",
    "build": "lerna run build --parallel",
    "deploy": "docker compose up -d"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^6.0.3"
  }
}
